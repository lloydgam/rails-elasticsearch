<p id="notice"><%= notice %></p>

<h1>Mbs Items</h1>
<%= form_with url: mbs_items_path, method: :get, local: true  do |form| %>
  <%= form.label :search, "Search term:"%>
  <%= form.text_field :query, id: :query, class: "form-control" %>
  <%= form.submit "Go", class: 'btn btn-primary'%>
<%end%>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Is Current</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mbs_items.each do |mbs_item| %>
      <tr>
        <td><%= mbs_item.reference %></td>
        <td><%= mbs_item.description %></td>
        <td><%= mbs_item.is_latest %></td>
        <td><%= mbs_item.start_date %></td>
        <td><%= mbs_item.end_date %></td>
        <td><%= link_to 'Show', mbs_item %></td>
        <td><%= link_to 'Edit', edit_mbs_item_path(mbs_item) %></td>
        <td><%= link_to 'Destroy', mbs_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mbs Item', new_mbs_item_path %>
